<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/prd_img"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:padding="5dp"
            style="@style/autoscroll"
            android:layout_marginTop="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/prd_img"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/prd_nme"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prd_nme" />

        <TextView
            android:padding="5dp"
            style="@style/autoscroll"
            android:layout_marginTop="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/prd_nme"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/prd_type"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prd_typ" />

        <TextView
            android:padding="5dp"
            style="@style/autoscroll"
            android:layout_marginTop="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/prd_img"
            app:layout_constraintTop_toBottomOf="@id/prd_nme"
            android:id="@+id/prd_prc"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prd_prc" />

        <TextView
            android:padding="5dp"
            style="@style/autoscroll"
            android:layout_marginTop="12dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/prd_prc"
            app:layout_constraintTop_toBottomOf="@id/prd_nme"
            android:id="@+id/prd_tax"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prd_prc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>